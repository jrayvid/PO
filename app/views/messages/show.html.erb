<h1><%= @message.title %></h1>
<p>Posted By <%= @message.user.email %><%= time_ago_in_words(@message.created_at) %>ago</p>
<p><%= @message.opinion %></p>



<h2>Comments</h2>


<%= render @message.comments %>
<h2>Reply To Opinion</h2>
<%= render'comments/form' %>

<%= link_to "Home", root_path %>
<% if user_signed_in? %>
	<% if @message.user_id == current_user.id %>
	<%= link_to "Edit", edit_message_path %>
	<%= link_to "Delete", message_path(@message), method: :delete, data: {confirm: "ARE YOU SURE?  THIS CAN'T BE UNDONE"} %>
	<% end %>
<% end %>

